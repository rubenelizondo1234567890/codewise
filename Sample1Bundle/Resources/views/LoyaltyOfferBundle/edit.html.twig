$("#LoyaltyOfferBundle_desc").blur(function(){

    $.post("{{ path('LoyaltyOfferBundlecheckSlugEdit') }}",$('#LoyaltyOfferBundle_desc, #LoyaltyOfferBundle_entityId').serialize())
        .done(function( data ) {
            if(data.success == 0){$("#msgCheckSlug").show();}
