        </div>
    </div>
</div>
{% elseif error==3 %}
<div class="row">
    <div class="col-md-12">      
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Error!</strong> A problem has been occurred while processing you request.<br />
            Please try again or contact your systems administrator.<br/>
        </div>
    </div>
</div>
{% elseif error==4 %}
<div class="row">
    <div class="col-md-12">      
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong>Error!</strong> This Slug is already in use.<br />
            Please use another one.<br/>
        </div>
    </div>
</div>
{% endif %}
<script>
  // keep track of how many bundleItem fields have been rendered
    var bundleItemCount = '{{ form.offerBundleItems|length }}';
    var challenges = new Array();
    var rewards = new Array();
    var offerBundles = new Array();
    var offerBundleItems = new Array();
    var offerBundleIds = new Array();
    var bundleType = '{{ entity.typeName }}';
    switch (bundleType) {
                case 'RewardChoice':
                    bundleType = 'Reward Choice';
                    break;
                case 'ChallengeChoice':
                    bundleType = 'Challenge Choice';
                    break;
                case 'RewardMysteryBox':
                    bundleType = 'Reward Mystery Box';
                    break;
                default:
                    break;
            }
    {% for key, challenge in challenges %}
        challenges[{{ key }}] = '{{ challenge }}';
    {% endfor %}
    {% for key, reward in rewards %}
        rewards[{{ key }}] = '{{ reward }}';
    {% endfor %}
    {% for key, offerBundle in offerBundles %}
        offerBundles[{{ key }}] = '{{ offerBundle }}';
    {% endfor %}
    {% for key, offerBundleItem in entity.offerBundleItems %}
        offerBundleItems[{{ key }}] = '{{ offerBundleItem.bundleItem }}';
    {% endfor %}
    {% for key, offerBundleItem in entity.offerBundleItems %}
        offerBundleIds[{{ key }}] = '{{ offerBundleItem.offerId }}';
    {% endfor %}
</script>
{% endblock content %}
